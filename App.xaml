<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LLMChat"
             xmlns:converters="clr-namespace:LLMChat.Converters"
             x:Class="LLMChat.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:InvertBoolConverter x:Key="InvertBoolConverter" />
            <converters:ConnectionColorConverter x:Key="ConnectionColorConverter" />
            <converters:AutoConversOpacityConverter x:Key="AutoConversOpacity" />
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
